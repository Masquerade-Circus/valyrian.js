{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "jsx": "react",
    "jsxFragmentFactory": "v.fragment",
    "jsxFactory": "v"
  },
  "include": ["./lib"],
  "exclude": ["test*/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
