{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "esModuleInterop": true,
    "jsxFactory": "v",
    "jsxFragmentFactory": "v.fragment",
    "rootDir": "lib",
    "paths": {
      "node_modules/*": ["./node_modules/*"]
    }
  },
  "include": ["./lib"],
  "exclude": ["./dist/**"]
}
