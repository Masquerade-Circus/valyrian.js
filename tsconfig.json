{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["./lib", "./plugins"],
  "exclude": ["test*/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
