{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "removeComments": false,
    "jsx": "react",
    "jsxFragmentFactory": "v.fragment",
    "jsxFactory": "v"
  },
  "include": ["./lib", "./plugins"],
  "exclude": ["test*/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
