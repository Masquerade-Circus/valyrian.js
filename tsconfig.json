{
  "compilerOptions": {
    "target": "ES6" /* For reference check: https://node.green/#ES2020 */,
    "module": "ES6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["./lib", "./plugins"],
  "exclude": ["test*/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
