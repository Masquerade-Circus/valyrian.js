{
  "name": "valyrian.js",
  "version": "2.7.0",
  "description": "Lightweight steel to forge PWAs. (Minimal Frontend Framework with server side rendering and other capabilities)",
  "main": "dist/valyrian.min.js",
  "jsnext:main": "lib/index.js",
  "module": "lib/index.js",
  "minified:main": "dist/valyrian.min.js",
  "repository": "git@github.com:Masquerade-Circus/valyrian.js.git",
  "author": "Masquerade <christian@masquerade-circus.net>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development node-dev --no-deps server.js",
    "dev:source": "cross-env NODE_ENV=development node rollupSource.js",
    "dev:app": "cross-env NODE_ENV=development node rollupApp.js",
    "dev:test": "cross-env NODE_ENV=development ava --watch --verbose",
    "dev:nyc:test": "cross-env NODE_ENV=development nodemon -w ./tests -w ./lib -w ./plugins -w ./server --exec 'nyc ava --verbose'",
    "build": "yarn build:assets && yarn build:source",
    "build:assets": "cross-env NODE_ENV=production node buildAssets.js",
    "build:source": "cross-env NODE_ENV=production node rollupSource.js",
    "build:app": "cross-env NODE_ENV=production node rollupApp.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "remark": "remark . -o"
  },
  "dependencies": {
    "clean-css": "^4.2.1",
    "cssnano": "^4.1.10",
    "favicons": "^5.4.1",
    "htmlparser2": "^4.0.0",
    "jsdom": "^15.1.1",
    "node-fetch": "^2.6.0",
    "uncss": "^0.17.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "ava": "^2.2.0",
    "chuhai": "^1.2.0",
    "compression": "^1.7.4",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "esm": "^3.2.25",
    "expect": "^24.8.0",
    "micro": "^9.3.4",
    "micro-ex-router": "^1.7.1",
    "node-dev": "^4.0.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "puppeteer": "^1.19.0",
    "recursive-readdir": "^2.2.2",
    "remark-cli": "^7.0.0",
    "remark-toc": "^6.0.0",
    "rollup": "^1.19.4",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "ava": {
    "files": [
      "tests/**/*_test.js"
    ],
    "sources": [
      "**/*.{js,jsx}"
    ],
    "failWithoutAssertions": false,
    "require": [
      "esm"
    ],
    "babel": {
      "testOptions": {
        "sourceMaps": "inline",
        "presets": [
          [
            "module:ava/stage-4",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          [
            "@babel/transform-react-jsx",
            {
              "pragma": "v"
            }
          ]
        ]
      }
    }
  },
  "nyc": {
    "exclude": [
      "tests",
      "app"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "toc"
    ]
  }
}
