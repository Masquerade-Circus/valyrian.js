{
  "name": "valyrian.js",
  "version": "2.7.0",
  "description": "Lightweight steel to forge PWAs. (Minimal Frontend Framework with server side rendering and other capabilities)",
  "main": "dist/valyrian.min.js",
  "jsnext:main": "lib/index.js",
  "module": "lib/index.js",
  "minified:main": "dist/valyrian.min.js",
  "repository": "git@github.com:Masquerade-Circus/valyrian.js.git",
  "author": "Masquerade <christian@masquerade-circus.net>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development node-dev --no-deps server.js",
    "dev:source": "cross-env NODE_ENV=development node rollupSource.js",
    "dev:app": "cross-env NODE_ENV=development node rollupApp.js",

    "dev:bench": "cross-env NODE_ENV=development node dev.js -w",

    "dev:test": "cross-env NODE_ENV=development nodemon -w ./test -w ./lib -w ./plugins --exec 'mocha --timeout 10000 --require @babel/register --require esm \"test/**/*_test.js\"'",
    "dev:test:nyc": "cross-env NODE_ENV=development nodemon -w ./test -w ./lib -w ./plugins --exec 'nyc --reporter=text --reporter=lcov mocha --timeout 10000 --require @babel/register --require esm \"test/**/*_test.js\"'",

    "build": "yarn build:assets && yarn build:source && yarn remark",
    "build:assets": "cross-env NODE_ENV=production node buildAssets.js",
    "build:source": "cross-env NODE_ENV=production node rollupSource.js",
    "build:app": "cross-env NODE_ENV=production node rollupApp.js",

    "test": "cross-env NODE_ENV=development nyc mocha --timeout 10000 --require @babel/register --require esm \"test/**/*_test.js\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "remark": "remark . -o"
  },
  "dependencies": {
    "clean-css": "^4.2.1",
    "cssnano": "^4.1.10",
    "favicons": "^5.4.1",
    "htmlparser2": "^4.0.0",
    "jsdom": "^15.1.1",
    "node-fetch": "^2.6.0",
    "uncss": "^0.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "babel-plugin-istanbul": "^5.2.0",
    "compression": "^1.7.4",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "esm": "^3.2.25",
    "exam": "^2.1.1",
    "expect": "^24.8.0",
    "micro": "^9.3.4",
    "micro-ex-router": "^1.7.1",
    "mocha": "^6.2.0",
    "node-dev": "^4.0.0",
    "nyc": "^14.1.1",
    "remark-cli": "^7.0.0",
    "remark-toc": "^6.0.0",
    "rollup": "^1.19.4",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.1",
    "yargs": "^14.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true,
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "v"
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "exclude": [
      "test",
      "app",
      "dev.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "toc"
    ]
  }
}
