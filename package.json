{
  "name": "valyrian.js",
  "version": "7.2.6",
  "description": "Lightweight steel to forge PWAs. (Minimal Frontend Framework with server side rendering and other capabilities)",
  "repository": "git@github.com:Masquerade-Circus/valyrian.js.git",
  "author": "Masquerade <christian@masquerade-circus.net>",
  "funding": "https://github.com/sponsors/Masquerade-Circus",
  "license": "Apache-2.0",
  "private": false,
  "sideEffects": false,
  "source": "lib/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.min.js",
  "browser": "dist/index.min.js",
  "types": "dist/**/*.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./lib/*": {
      "import": "./lib/*/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*/index.mjs",
      "require": "./dist/*/index.js"
    }
  },
  "files": [
    "dist",
    "lib",
    "package-lock.json",
    "LICENSE",
    "tsconfig.json"
  ],
  "keywords": [
    "valyrian.js",
    "valyrianjs",
    "valyrian",
    "ui",
    "framework",
    "virtual dom",
    "vdom",
    "hyperscript",
    "front-end",
    "server side rendering",
    "ssr",
    "progressive web app",
    "pwa",
    "jsx",
    "tsx",
    "server side jsx",
    "server side tsx"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:source": "NODE_ENV=development nodemon --enable-source-maps -e tsx,ts,json,css -w ./lib -w ./www source.js",
    "dev:test": "nodemon --enable-source-maps -e mjs,js,ts,json,css,tsx,jsx -w ./lib -w ./test -w ./dist --exec 'mocha --bail --timeout 15000 --slow 0 --require ./register --enable-source-maps \"test/**/*_test.js\"'",
    "dev:test:nyc": "nodemon --enable-source-maps -w ./test -w ./lib -w ./plugins --exec 'nyc --reporter=text --reporter=lcov mocha --timeout 15000 --slow 0 --require ./register \"test/**/*_test.js\"'",
    "dev:web": "browser-sync start --config 'www/bs-config.js'",
    "build": "npm run build:source && npm run remark",
    "build:source": "cross-env NODE_ENV=production node source.js",
    "test": "cross-env NODE_ENV=development nyc mocha --forbid-only --timeout 15000 --slow 0 --require ./register --enable-source-maps --exit \"test/**/*_test.js\"",
    "coverage": "nyc report --reporter=lcov",
    "remark": "remark . -o",
    "commit": "git add . && git-cz",
    "release": "release-it --verbose",
    "release-test": "release-it --dry-run --verbose",
    "bench": "nodemon -e js,ts,json,css,tsx -w ./bench -w ./lib -w ./plugins --exec 'NODE_OPTIONS=--enable-source-maps buffalo-test --require ./register'"
  },
  "dependencies": {
    "clean-css": "^5.2.4",
    "esbuild": "^0.15.7",
    "favicons": "^7.0.0",
    "form-data": "^4.0.0",
    "purgecss": "4.1.3",
    "terser": "^5.15.0",
    "ts-node": "^10.9.1",
    "tsc-prog": "^2.2.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/clean-css": "^4.2.5",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/sharp": "^0.30.5",
    "@types/source-map": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "buffalo-test": "^2.0.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.5",
    "eslint": "^8.23.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "expect": "^29.0.3",
    "fastify": "^4.10.2",
    "gzip-size": "^7.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "pirates": "^4.0.5",
    "release-it": "^15.4.1",
    "remark-cli": "^11.0.0",
    "remark-toc": "^8.0.1"
  },
  "overrides": {
    "minimist": "^1.2.6"
  },
  "nyc": {
    "exclude": [
      "test",
      "register.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "toc"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "feature",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styles"
            },
            {
              "type": "chore",
              "section": "Miscellaneous Chores"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    },
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "npm run build",
        "npm run test"
      ],
      "after:bump": [
        "npm run remark"
      ],
      "after:@release-it/conventional-changelog": [
        "npm run remark"
      ]
    }
  }
}
