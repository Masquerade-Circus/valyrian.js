{
  "name": "valyrian.js",
  "version": "1.0.0",
  "description": "Minimal Frontend framework with server side rendering inspired on Mithril and Hyperapp",
  "main": "index.js",
  "repository": "git@github.com:Masquerade-Circus/valyrian.js.git",
  "author": "Masquerade <christian@masquerade-circus.net>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development nodemon -w ./server -w ./app/dist -w ./dist server.js",
    "dev:source": "cross-env NODE_ENV=development node rollupSource.js",
    "dev:app": "cross-env NODE_ENV=development node rollupApp.js",
    "build": "cross-env NODE_ENV=production node rollupSource.js",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "he": "^1.1.1",
    "html-element": "^2.2.0",
    "node-fetch": "^2.1.2",
    "uncss": "^0.16.2"
  },
  "devDependencies": {
    "cross-env": "^5.1.6",
    "micro": "^9.1.0",
    "micro-ex-router": "^1.5.4",
    "nodemon": "^1.14.11",
    "recursive-readdir": "^2.2.2",
    "rollup": "^0.57.1",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "jscsConfig": {
    "requireSemicolons": true,
    "validateIndentation": {
      "value": 4,
      "allExcept": [
        "emptyLines"
      ]
    }
  }
}
