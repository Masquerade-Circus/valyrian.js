{
  "name": "valyrian.js",
  "version": "8.0.12",
  "description": "Lightweight steel to forge PWAs. (Minimal Frontend Framework with server side rendering and other capabilities)",
  "repository": "git@github.com:Masquerade-Circus/valyrian.js.git",
  "author": "Masquerade <christian@masquerade-circus.net>",
  "funding": "https://github.com/sponsors/Masquerade-Circus",
  "license": "Apache-2.0",
  "private": false,
  "sideEffects": false,
  "source": "lib/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.min.js",
  "browser": "dist/index.min.js",
  "types": "dist/**/*.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./lib/*/index.ts",
      "import": "./dist/*/index.mjs",
      "require": "./dist/*/index.js"
    }
  },
  "files": [
    "dist",
    "lib",
    "package-lock.json",
    "LICENSE",
    "tsconfig.json"
  ],
  "keywords": [
    "valyrian.js",
    "valyrianjs",
    "valyrian",
    "ui",
    "framework",
    "virtual dom",
    "vdom",
    "hyperscript",
    "front-end",
    "server side rendering",
    "ssr",
    "progressive web app",
    "pwa",
    "jsx",
    "tsx",
    "server side jsx",
    "server side tsx"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:source": "NODE_ENV=development chokidar './lib/**/*.ts' -c 'bun run source.js'",
    "dev:test": "bun test --watch",
    "dev:web": "browser-sync start --config 'www/bs-config.js'",
    "build": "bun run build:source && bun run remark",
    "build:source": "cross-env NODE_ENV=production bun run source.js",
    "test": "cross-env NODE_ENV=development bun test --bail --coverage --coverage-reporter=lcov --coverage-reporter=text",
    "remark": "remark . -o",
    "commit": "git add . && git-cz && git push",
    "release": "release-it --verbose",
    "release-test": "release-it --dry-run --verbose",
    "update": "ncu -u && bun install"
  },
  "dependencies": {
    "clean-css": "^5.3.3",
    "esbuild": "^0.25.11",
    "favicons": "^7.2.0",
    "form-data": "^4.0.4",
    "purgecss": "^7.0.2",
    "remark": "^15.0.1",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "tsc-prog": "^2.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bun": "^1.3.0",
    "@types/clean-css": "^4.2.11",
    "@types/node": "^24.8.1",
    "@types/node-fetch": "^2.6.13",
    "@types/parse-path": "^7.1.0",
    "@types/sharp": "^0.32.0",
    "@types/source-map": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "buffalo-test": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "compression": "^1.8.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.11.18",
    "eslint": "^9.37.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "expect": "^30.2.0",
    "fastify": "^5.6.1",
    "gzip-size": "^7.0.0",
    "pirates": "^4.0.7",
    "release-it": "^19.0.5",
    "remark-cli": "^12.0.1",
    "remark-toc": "^9.0.0",
    "typescript-eslint": "^8.46.1"
  },
  "overrides": {
    "minimist": "^1.2.8",
    "source-map-support": "^0.5.21"
  },
  "remarkConfig": {
    "plugins": [
      "toc"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "feature",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styles"
            },
            {
              "type": "chore",
              "section": "Miscellaneous Chores"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    },
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "bun run build",
        "bun run test"
      ],
      "after:bump": [
        "bun run remark"
      ],
      "after:@release-it/conventional-changelog": [
        "bun run remark"
      ]
    }
  }
}
